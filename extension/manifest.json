{
  "name": "ContextBroker",
  "description": "Prompt bar that augments your query and injects it into ChatGPT.",
  "version": "0.1.0",
  "manifest_version": 3,
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://web-production-851cd.up.railway.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
