{
  "manifest_version": 3,
  "name": "ContextBroker",
  "version": "1.0.1",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*"
    ],
    "js": ["content.js"],
    "css": ["overlay.css"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["overlay.css"],
    "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
  }]
}
